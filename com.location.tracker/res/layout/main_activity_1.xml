<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity" >
    
    
   <LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity" >
    
    <TextView
        android:paddingTop="20dip"
        android:id="@+id/addBtn"
        android:text="Location Tracking App"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="addItems"
        android:gravity="center"
        android:textSize="20dip"
        android:textColor="#b22222">
        
    </TextView>
       <View 
       android:background="#FF000000" 
       android:layout_height="2dp" 
       android:layout_width="fill_parent"
       />
    
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="15dip"
        tools:context=".MainActivity"
        >
        
        <Button
	       android:id="@+id/togglebuttonStart"
	       android:layout_width="100dip"
	       android:layout_height="100dip"
	       style="@style/myToggle"
	       android:textStyle="bold"
	       android:textSize="20sp"
	       android:text="Start"
	       android:layout_alignParentLeft="true"
	       android:layout_alignParentTop="true"
	       
	     />
	   
	    <Button
	       android:id="@+id/togglebuttonFrequency"
	       android:layout_width="100dip"
	       android:layout_height="100dip"
	       android:layout_alignParentTop="true"
	       android:layout_alignParentRight="true"
	       android:background="@drawable/freq"
	    />
	   
	    <Button
	        android:id="@+id/togglebuttongps"
	        android:layout_width="100dip"
	        android:layout_height="100dip"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/gpsf" />

	    <Button
	        android:id="@+id/togglebuttonEmail"
	        android:layout_width="100dip"
	        android:layout_height="100dip"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true"
	        android:background="@drawable/email"
	        android:onClick="onToggleClicked" />

	    <Button
	        android:id="@+id/onoff"
	        android:layout_marginTop="5dip"
	        android:layout_width="85dip"
	        android:layout_height="85dip"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/off1" />
       
	</RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        tools:context=".MainActivity" >

        <LinearLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="15dip"
            android:layout_marginLeft="15dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            tools:context=".MainActivity" >

            <LinearLayout
                android:id="@+id/rl2l1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textNetwork"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:gravity="center"
                     android:textStyle="bold"
                    android:text="@string/textNetwork"
                     android:background="@drawable/text" />

                <TextView
                    android:id="@+id/textNetwork1"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:gravity="center"
                     android:textStyle="bold"
                      android:textColor="#FF3333"
                     android:background="@drawable/text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl2l2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textFrequency"
                     android:paddingTop="5dip"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:gravity="center"
                     android:textStyle="bold"
                     android:background="@drawable/text"
                    android:text="@string/textFreq" />

                <TextView
                    android:id="@+id/textFrequency1"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:gravity="center"
                     android:textColor="#FF3333"
                     android:textStyle="bold"
                     android:background="@drawable/text" />
            </LinearLayout>
        </LinearLayout>
        
  <LinearLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginRight="15dip"
            android:layout_marginLeft="15dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            tools:context=".MainActivity"
            android:layout_below="@+id/relativeLayout3" >
        
        <LinearLayout
            android:id="@+id/rl2l3"
            android:layout_width="120dip"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:orientation="vertical"
           
         >

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:gravity="center"
                android:text="@string/textStatus"
                android:background="@drawable/text"
                android:textStyle="bold"
             />

            <TextView
                android:id="@+id/textStatus1"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                 android:background="@drawable/text"
                  android:textStyle="bold"
                   android:textColor="#FF3333"
                android:gravity="center" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/rl2l4"
            android:layout_width="120dip"
            android:layout_height="60dip"
            android:orientation="vertical"
             android:layout_weight="1"
           
         >

            <TextView
                android:id="@+id/textStatusEmail"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:gravity="center"
                android:text="@string/textStatusEmail"
                android:background="@drawable/text"
                android:textStyle="bold"
             />

            <TextView
                android:id="@+id/textStatus1Email"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                 android:background="@drawable/text"
                  android:textStyle="bold"
                  android:textColor="#FF3333"
                android:gravity="center"
                android:ellipsize="end" />
        </LinearLayout>
        </LinearLayout>
        
    </RelativeLayout>
     
</LinearLayout>
</ScrollView>